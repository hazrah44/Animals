package main;

public class Lion extends Animal {
	
	public Lion() {
		super();
	}
	
	
	public void talk() {
		System.out.println("Roar!");
	}
	
	
	public void timePasses() {
		super.timePasses();
		if (super.getHunger() >= 3) {
			System.out.println("The lion paces hungrily.");
		}
	}
	
	
	public String toString() {
		return "Lion";
	}
}
